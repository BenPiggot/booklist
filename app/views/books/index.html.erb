<div class="ink-grid">
  <h1>Books</h1>

  <% @books.each do |book| %>
    <ul class="unstyled">
      <% if book.name? %>
        <li >
          <div>
            <a href="/books/<%= book.id %>">
              <strong><%= book.name %> </strong>
            </a>
            <span>By <%= book.author %></span>
            <%= link_to "Delete", book_path(book), :method => :delete, class: "ink-button red", 
            :data => {:confirm => 'Are you sure?'}%>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>

  <a href="#" id="addNewBook" class="ink-button blue">Add a New Book</a>
</div>

  <div class="ink-shade fade">
    <div id="myModal" class="ink-modal fade" data-trigger="#addNewBook" data-width="80%" data-height="80%" role="dialog" aria-hidden="true" aria-labelled-by="modal-title">
      <div class="modal-header">
        <button class="modal-close ink-dismiss"></button>
        <h2 id="modal-title">Add a Book</h2>
      </div>
      <div class="modal-body" id="modalContent">
        <%= render "new" %>
      </div>
      <div class="modal-footer">
        <div class="push-right">
          <button class="ink-button caution ink-dismiss">Close</button>
        </div>
      </div>
    </div>
  </div>


  <script>
    Ink.requireModules( ['Ink.Dom.Selector_1','Ink.UI.Modal_1'], function( Selector, Modal ){
        var modalElement = Ink.s('#myModal');
        var modalObj = new Modal( modalElement );
    });
  </script>