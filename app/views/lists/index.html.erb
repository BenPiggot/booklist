<div class="ink-grid book-container">
  <h1>My Book Lists</h1>

  <% @lists.each do |list| %>
    <ul class="unstyled">
      <% if list.name? %>
        <li >
          <div class="list-item">
            <a href="/lists/<%= list.id %>">
              <strong><%= list.name %> </strong>
            </a>
            <%= link_to "", list_path(list), :method => :delete, class: "ink-button red fa fa-trash", 
            :data => {:confirm => 'Are you sure?'}%>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>

  <a href="#" id="addNewList" class="ink-button blue">Create a List</a>
</div>

  <div class="ink-shade fade">
    <div id="myModal" class="ink-modal fade" data-trigger="#addNewList" data-width="80%" data-height="80%" role="dialog" aria-hidden="true" aria-labelled-by="modal-title">
      <div class="modal-header">
        <button class="modal-close ink-dismiss"></button>
        <h2 id="modal-title">Create a List</h2>
      </div>
      <div class="modal-body" id="modalContent">
        <%= render "new" %>
      </div>
      <div class="modal-footer">
        <div class="push-right">
          <button class="ink-button caution ink-dismiss">Close</button>
        </div>
      </div>
    </div>
  </div>


  <script>
    Ink.requireModules( ['Ink.Dom.Selector_1','Ink.UI.Modal_1'], function( Selector, Modal ){
        var modalElement = Ink.s('#myModal');
        var modalObj = new Modal( modalElement );
    });
  </script>